<Window x:Class="GUI.TemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="TemplateWindow" Height="400" Width="350">
    <Grid Background="White">
        <Border BorderThickness="1" Margin="5" BorderBrush="Black"/>
        <TextBox VerticalAlignment="Top" Margin="10" Text="Hello World!" HorizontalAlignment="Center"/>
        <Button Content="Add New Panel to Home Tab" Height="20" Margin="10,10,10,10" VerticalAlignment="Bottom" Click="BtnClickAddPanel"/>
        <Button Content="Check loaded documents" Height="20" Margin="10,10,10,35" VerticalAlignment="Bottom" Click="BtnClickCheckDocuments"/>

    </Grid>
</Window>
